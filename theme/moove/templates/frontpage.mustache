{{! Moodle Frontpage Template - Custom for Dietitian Website }}

{{> theme_boost/head }}

<body {{{ bodyattributes }}}>

{{{ output.standard_top_of_body_html }}}

<header class="bg-white border-bottom py-3">
    <div class="container d-flex justify-content-between align-items-center">
        <h1 class="h4 m-0">DiyetMerkezi.com</h1>
        <nav>
            <a href="#" class="me-3">Ana Sayfa</a>
            <a href="#">İletişim</a>
        </nav>
    </div>
</header>

<main role="main">

    <!-- SLIDER -->
    <section class="custom-slider">
        <div id="mainSlider" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://source.unsplash.com/1600x500/?healthy,food" class="d-block w-100" alt="Slider 1">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Fit Bir Yaşam Başlasın</h5>
                        <p>Bilimsel ve kişisel yaklaşımla sağlıklı yaşama adım at.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://source.unsplash.com/1600x500/?diet,vegetables" class="d-block w-100" alt="Slider 2">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Ücretsiz Diyet Listeleri</h5>
                        <p>Sana özel örnek diyetlerle farkı hisset!</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#mainSlider" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#mainSlider" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </section>

    <!-- ÜCRETSİZ DİYET PROGRAMLARI -->
    <section class="container my-5">
        <h2 class="text-center mb-4">Ücretsiz Diyet Programları</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="https://source.unsplash.com/400x250/?vegan" class="card-img-top" alt="Vegan Diyet">
                    <div class="card-body">
                        <h5 class="card-title">Vegan Diyet</h5>
                        <p class="card-text">Bitkisel beslenenler için özel planlama.</p>
                        <a href="#" class="btn btn-outline-primary">İncele</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="https://source.unsplash.com/400x250/?keto" class="card-img-top" alt="Ketojenik Diyet">
                    <div class="card-body">
                        <h5 class="card-title">Ketojenik Diyet</h5>
                        <p class="card-text">Düşük karbonhidrat ile yağ yakımını hızlandır.</p>
                        <a href="#" class="btn btn-outline-primary">İncele</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="https://source.unsplash.com/400x250/?fitness,meal" class="card-img-top" alt="Sporcu Diyeti">
                    <div class="card-body">
                        <h5 class="card-title">Sporcu Diyeti</h5>
                        <p class="card-text">Antrenmana özel kalori & makro dengesi.</p>
                        <a href="#" class="btn btn-outline-primary">İncele</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- NEDEN BİZ? -->
    <section class="bg-light py-5">
        <div class="container text-center">
            <h2 class="mb-4">Neden Biz?</h2>
            <div class="row">
                <div class="col-md-4">
                    <i class="fas fa-heartbeat fa-2x text-primary mb-3"></i>
                    <h5>Bilimsel Yaklaşım</h5>
                    <p>Her danışana özel, veri odaklı planlama sunuyoruz.</p>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-user-md fa-2x text-primary mb-3"></i>
                    <h5>Uzman Kadro</h5>
                    <p>Deneyimli diyetisyenlerimizle kişiye özel çözümler.</p>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-laptop-medical fa-2x text-primary mb-3"></i>
                    <h5>Online Takip</h5>
                    <p>İletişim, takip ve gelişim süreci tamamen dijital.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- DİYETİSYEN KADROMUZ -->
    <section class="container my-5">
        <h2 class="text-center mb-4">Diyetisyen Kadromuz</h2>
        <div class="row justify-content-center">
            <div class="col-md-3 text-center mb-4">
                <img src="https://source.unsplash.com/120x120/?woman,doctor" class="rounded-circle mb-2" alt="Dyt. Ayşe" width="120" height="120">
                <h6>Uzm. Dyt. Ayşe Yılmaz</h6>
                <p>Kilo verme & sporcu beslenmesi</p>
            </div>
            <div class="col-md-3 text-center mb-4">
                <img src="https://source.unsplash.com/120x120/?man,doctor" class="rounded-circle mb-2" alt="Dyt. Mehmet" width="120" height="120">
                <h6>Uzm. Dyt. Mehmet Demir</h6>
                <p>Hastalıklarda beslenme</p>
            </div>
        </div>
    </section>

</main>

<!-- FOOTER -->
<footer class="bg-dark text-white py-4">
    <div class="container text-center">
        <p class="mb-1">&copy; 2025 DiyetMerkezi.com | Tüm hakları saklıdır.</p>
        <div>
            <a href="#" class="text-white me-3">Instagram</a>
            <a href="#" class="text-white me-3">Facebook</a>
            <a href="#" class="text-white">İletişim</a>
        </div>
    </div>
</footer>

